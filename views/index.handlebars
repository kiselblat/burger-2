<div class='row'>
  <div class='col-md-1'></div>
  <div class='col-md-5'>
    <div class='burger-block'>

      <h2>Burgers To Eat</h2>

      <ul class='list-unstyled'>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>

    </div>
  </div>
  <div class='col-md-5'>
    <div class='burger-block'>

      <h2>Burgers Eaten</h2>

      <ul class='list-unstyled'>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>
  <div class='col-md-1'></div>
</div>